    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc -I src/libs -I src/os src/os/*.c src/libs/*.c src/*.c -o a.exe -g",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}